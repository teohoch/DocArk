
<h1>Carpetas</h1>

  <div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">
    </h1>
    <% if user_signed_in? %>
      <div class="row">
        <% @foldersOwn.each do |folder| %>
          <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
            <div class="card h-100">
              <%= image_tag("icon.jpg", size: "100x100", :alt => "icon folder") %>
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to folder.name, folder%>
                </h4>
                <p class="card-text">
                  <b>Created: </b><%= folder.created_at%>
                  <br>
                  <b>Updated: </b><%= folder.updated_at%>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
        <div class="row">
          <% @folders.each do |folder| %>
              <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                  <%= image_tag("icon.jpg", size: "100x100", :alt => "icon folder") %>
                  <div class="card-body">
                    <h4 class="card-title">
                      <%= link_to folder.name, folder%>
                    </h4>
                    <p class="card-text">
                      <b>Created: </b><%= folder.created_at%>
                      <br>
                      <b>Updated: </b><%= folder.updated_at%>
                    </p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
    <% end %>
  </div>

<br>

