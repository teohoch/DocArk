    <div class="row">
      <% @folders.each do |folder| %>
        <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
          <div class="card h-100">
            <%= image_tag("icon.jpg", size: "100x100", :alt => "icon folder") %>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to folder.name, folder%>
              </h4>
              <p class="card-text"></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

