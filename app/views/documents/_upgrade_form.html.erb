<%= simple_form_for @document,:url => document_path(@document), html: {:multipart => true }, :method => :put do |f| %>

  <div class="form-inputs">
    <%= f.input :upfile, as: :file, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
