<h1><%= t('document.documents') %></h1>

<table>
  <thead>
    <tr>
      <th> <%= t('document.name') %> </th>
      <th><%= t('document.size') %></th>
      <th><%= t('document.version') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%=number_to_human_size document.size %></td>
        <td><%= document.version %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
