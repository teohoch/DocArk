<div class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header" style="padding-top: 10px">
      <%= link_to t('doorkeeper.layouts.admin.nav.oauth2_provider'), oauth_applications_path, class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav" style="padding-top: 10px">
      <%= content_tag :li, class: "#{'active' if request.path == oauth_applications_path}" do %>
          <%= link_to t('doorkeeper.layouts.admin.nav.applications'), oauth_applications_path %>
      <% end %>
      <%= content_tag :li do %>
          <%= link_to t('doorkeeper.layouts.admin.nav.home'), root_path %>
      <% end %>
    </ul>
    <% if user_signed_in? %>
          <span class="navbar-text">
            <%= "#{t('sign_as')} #{current_user.name}" %>
            <%= image_tag current_user.image, html_options = {style: 'max-height:40px; border-radius: 25px;'} %>
          </span>
    <% else %>
        <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, html_options={class: 'btn btn-primary '} %>
    <% end %>
  </div>
</div>